<h1 class="mb-1 restaurant-show-title">{{detail.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class="mx-auto mb-1 " style="width: 250px;font-size:30px">
        <form action="/restaurants/{{detail.id}}/edit" method="GET" style="display:inline">
          <button class="btn btn-primary" style="font-size:25px;padding-top:0px">edit</button>
        </form>

        <form action="/restaurants/{{detail.id}}/delete?_method=DELETE" method="POST" style="display:inline">
          <button class="btn btn-warning" style="font-size:25px;padding-top:0px">delete</button>
        </form>

        <a href="/restaurants" class="btn btn-dark" style="display:inline;font-size:27px;padding-top:0px">back</a>

      </div>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{detail.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{detail.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{detail.phone}}
      </p>

      <p class="mb-5">
        {{detail.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{detail.image}}" alt="{{detail.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>